<div class="container">
    <div class="flex-container">
        <div class="flex-item">
            <h3>Personal / Staff</h3>
        </div>
        <div class="flex-item">
            <a class="btn btn-success" href="/admin/staff/agregarStaff">Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Puesto</th>
                        <th scope="col">Descripcion</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each staff}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{{imagen1}}}</td>
                        <td>{{nombre}}</td>
                        <td>{{puesto}}</td>
                        <td>{{descripcion}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/staff/modificarStaff/{{id}}">Editar</a>
                            <a class="btn btn-secondary" href="/admin/staff/eliminarStaff/{{id}}">Borrar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/stylesheets/tablaStaff.css">