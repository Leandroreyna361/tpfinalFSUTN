<div class="container">
<div class="flex-container">
    <div class="flex-item">
        <h3>Listado de Novedades</h3>
    </div>
    <div class="flex item">
        <a class="btn btn-success" href="/admin/contactoNovedades/agregarNovedades">Nuevo</a>
    </div>
</div>
<div class="row">
    <div class="table-container">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>

                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
              {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-end">
                        <a class="btn btn-secondary" href="/admin/contactoNovedades/modificarNovedad/{{id}}">Editar</a>
                        <a class="btn btn-secondary" href="/admin/contactoNovedades/eliminarNovedad/{{id}}">Borrar</a>

                    </td>
                </tr>
              {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>

<link rel="stylesheet" href="/stylesheets/tablasNovedades.css">